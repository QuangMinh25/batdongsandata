        </ul>
    </div><!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid xyz">
            <div class="row">
                <div class="col-lg-12">
                    <div id="menu1" style="height:auto;">
                        <h2><i class="fa fa-info-circle" aria-hidden="true"></i> Chi tiết dự án</h2>
                       
                        <table class="table">
                            <thead class="table table-hover table-dark">
                              <tr class="info">
                                <th scope="col">Giá</th>
                                <th scope="col">Số nhà</th>
                                <th scope="col">Đường</th>
                                <th scope="col">Quận</th>
                                <th scope="col">Phường</th>
                                <th scope="col">Diện tích</th>
                                <th scope="col">Cấu trúc</th>
                                <th scope="col">Vị trí</th>
                                <th scope="col">Chủ sở hữu</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">Liên hệ</th>
                               
                              </tr>
                            </thead>
                            <tbody>
                              <tr>
                                <td><%= bdss.gia %></td>
                                <td><%= bdss.sonha %></td>
                                <td><%= bdss.duong %></td>
                                <td><%= bdss.quan %></td>
                                <td><%= bdss.phuong %></td>
                                <td><%= bdss.dientich %> m²</td>
                                <td><%= bdss.cautruc %></td>
                                <td><%= bdss.vitri %></td>
                                <td><%= bdss.chusohuu %></td>
                                <td><%= bdss.trangthai %></td>
                                <td><%= bdss.lienhe %></td>
                                
                                
                                    
                              </tr>
                            
                            </tbody>
                          </table>
                          <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            
                            <ol class="carousel-indicators">
                              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                              <%if (bdss.multiple_image.length > 1) { %>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                              <% } %>
                              <%if (bdss.multiple_image.length >2) { %>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                              <% } %>
                              <%if (bdss.multiple_image.length >3) { %>
                                <li data-target="#myCarousel" data-slide-to="3"></li>
                              <% } %>
                              <%if (bdss.multiple_image.length >4) { %>
                                <li data-target="#myCarousel" data-slide-to="4"></li>
                              <% } %>
                              <%if (bdss.multiple_image.length >5) { %>
                                <li data-target="#myCarousel" data-slide-to="5"></li>
                              <% } %>
                              <%if (bdss.multiple_image.length >6) { %>
                                <li data-target="#myCarousel" data-slide-to="6"></li>
                              <% } %>
                              <%if (bdss.multiple_image.length >7) { %>
                                <li data-target="#myCarousel" data-slide-to="7"></li>
                              <% } %>
                              <%if (bdss.multiple_image.length >8) { %>
                                <li data-target="#myCarousel" data-slide-to="8"></li>
                              <% } %>
                              <%if (bdss.multiple_image.length >9) { %>
                                <li data-target="#myCarousel" data-slide-to="9"></li>
                              <% } %>
                            </ol>
                            
                            <div class="carousel-inner">
                              <%if (bdss.multiple_image.length >= 0) { %>
                                <div class="item active">
                                  <img src="<%= bdss.multiple_image[0] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                              <%if (bdss.multiple_image.length > 1) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[1] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                              <%if (bdss.multiple_image.length > 2) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[2] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                              <%if (bdss.multiple_image.length >3) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[3] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                              <%if (bdss.multiple_image.length >4) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[4] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                              <%if (bdss.multiple_image.length >5) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[5] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                              <%if (bdss.multiple_image.length >6) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[6] %>" class="img-rounded" alt="Cinque Terre">
