                              <% } %>
                              <%if (bdss.multiple_image.length >7) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[7] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                              <%if (bdss.multiple_image.length >8) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[8] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                              <%if (bdss.multiple_image.length >9) { %>
                                <div class="item item">
                                  <img src="<%= bdss.multiple_image[9] %>" class="img-rounded" alt="Cinque Terre">
                                </div>
                              <% } %>
                            </div>
                          
                           
                            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                              <span class="glyphicon glyphicon-chevron-left"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                              <span class="glyphicon glyphicon-chevron-right"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <!-- /#page-content-wrapper -->

</div>
